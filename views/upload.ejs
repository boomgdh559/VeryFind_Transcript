<% include partials/header.ejs %>
<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-8 col-xl-6">
                <div class="row">
                    <div class="col text-center" style="padding-top:20%">
                        <h1>Upload Transcript</h1>
                        <!-- <p class="text-h3">Far far away, behind the word mountains, far from the countries Vokalia and Consonantia. </p> -->
                    </div>
                </div>
                <form id="uploadTranscript" action="http://localhost:6020/upload-transcript" method="POST">
                    <div class="row align-items-center">
                        <div class="col mt-4">
                            <input type="text" class="form-control" placeholder="Student ID" id="studentId"
                                name="studentId">
                        </div>
                    </div>
                    <div class="row align-items-center mt-4">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Name" id="studentName"
                                name="studentName" >
                        </div>
                    </div>
                    <div class="row align-items-center mt-4">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Degree Conferred" id="degree"
                                name="degree">
                        </div>
                    </div>
                    <div class="row align-items-center mt-4">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Total GPA" id="gpa" name="gpa">
                        </div>
                    </div>
                    <div class="row align-items-center mt-4">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Date Of Graduation" id="dateGrade"
                                name="dateGrade">
                        </div>
                    </div>
                    <div class="row align-items-center mt-4">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Test JSON Text" id="testJSON"
                                name="testJSON">
                        </div>
                    </div>

                    <div class="row justify-content-start mt-4">
                        <div class="col">
                            <button class="btn btn-primary mt-4" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
                <h1 style="font-size: 0px;"><%=locals.status%></h1>

                <%if (locals.status === 'success') {%>
                <div class="alert alert-success" role="alert">
                    Successful Upload Transcript
                </div>
                <% }else if(locals.status === 'fail'){ %>
                <div class="alert alert-danger" role="alert">
                    Failed Upload Transcript
                </div>
                <%}%>
            </div>
        </div>
    </div>
</section>
<% include partials/footer.ejs %>